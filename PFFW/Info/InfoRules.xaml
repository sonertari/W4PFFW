<local:InfoBase x:Class="PFFW.InfoRules"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PFFW"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="Rules" Grid.Row="0" />
            <DataGrid x:Name="rulesDataGrid" AutoGenerateColumns="False" AlternatingRowBackground="{DynamicResource {x:Static SystemColors.ControlColor}}" AlternationCount="2" Grid.Row="1" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Number" Binding="{Binding [0]}" />
                    <DataGridTextColumn Header="Evaluations" Binding="{Binding [1]}" />
                    <DataGridTextColumn Header="Packets" Binding="{Binding [2]}" />
                    <DataGridTextColumn Header="Bytes" Binding="{Binding [3]}" />
                    <DataGridTextColumn Header="States" Binding="{Binding [4]}" />
                    <DataGridTextColumn Header="State Creations" Binding="{Binding [5]}" />
                    <DataGridTextColumn Header="Rule" Binding="{Binding [6]}" />
                    <DataGridTextColumn Header="Inserted" Binding="{Binding [7]}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </ScrollViewer>
</local:InfoBase>
